{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "off",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "no-extra-semi": "off",

        "semi": [
            "off",
            "always"
        ],
        "no-unused-vars": [
            "off", 
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false 
            }
        ],
        "no-console":  [
            "off",
            "all"
        ],
        "react/prop-types": 0
    }
}



